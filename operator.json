{
  "name": "Clustered Heatmap",
  "description": "Calculate the mathematical average of the data points in a cell.",
  "tags": ["data visualisation", "plot", "heatmap"],
  "authors": ["tercen"],
  "urls": ["https://github.com/tercen/clustered_heatmap_operator"],
  "properties": [
    {
      "kind": "BooleanProperty",
      "name": "Cluster Rows",
      "defaultValue": true,
      "description": "Whether or not the rows should be clustered."
    },
    {
      "kind": "BooleanProperty",
      "name": "Cluster Columns",
      "defaultValue": false,
      "description": "Whether or not the columns should be clustered."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Rows",
            "type": "",
            "description": "Factors to stratify per row.",
            "ontologyMapping": "sample",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Columns",
            "type": "",
            "description": "Factors to stratify per column.",
            "ontologyMapping": "variable",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Measurement",
                "type": "numeric",
                "description": "Measurement values (numeric, per cell).",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}